/* pages/login/login.wxss */

.contain{
  display: flex;
  flex-direction: column;
  margin: 10px;
}

.phoneLayout{
  display: flex;
  flex-direction: row;
  height: 40px;
  align-items: center
}

.codeLayout{
  display: flex;
  flex-direction: row;
  height: 40px;
  align-items: center;
}

.codeText{
  margin-left: 10px; 
  color: #15abc4; 
  flex: 1;    
  justify-content:center;
  display: flex;
}

.toast_mask {  
  opacity: 0;  
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/ 
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 50%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 