.noticeClass{
  width: 100%;
  height: 160px;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128px;
  height: 128px;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin: 10px
}

.listClass{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100px;
  align-items: center;
}

.blockClass{
  display: flex;
  flex-direction: column;
}

.divider{
  height: 2px;
  background-color: #f3f3f3
}

.headClass{
  width: 100px;
  height: 80px;
  margin: 10px;
}

.stepCntClass{
  color: #333333
}

.rankClass{
  color: #15abc4
}

.noticeDetail{
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  padding-top: 20px;
  padding-bottom: 20px;
}

.title{
  color: #15abc4;
  font-size: 18px;
}

.time{
  color: #999999;
  font-size: 12px;
}




/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
