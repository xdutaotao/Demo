<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_center" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件号"
                    android:id="@+id/number_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="请输入零件号"
                    android:id="@+id/number"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件中文名称"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:id="@+id/name"
                    android:maxLength="16"
                    android:ellipsize="end"
                    android:textSize="50px"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>


            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="系统来源分配"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:id="@+id/source"
                    android:maxLength="16"
                    android:ellipsize="end"
                    android:textSize="50px"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout
                android:id="@+id/wrap_layout"
                style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="到货包装形式"
                    android:textColor="@android:color/black"
                    android:textSize="50px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/wrap_text"
                    android:maxLength="16"
                    android:ellipsize="end"
                    android:drawableRight="@drawable/turn_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout
                style="@style/collect_item"
                android:id="@+id/type_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件材料类型"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:id="@+id/type_txt"
                    android:drawableRight="@drawable/turn_right"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout
                style="@style/collect_item"
                android:id="@+id/modle_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件包装模数"
                    android:id="@+id/modle_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:digits="1234567890"
                    android:maxLength="3"
                    android:id="@+id/modle_num"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/out_layout"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:background="@color/divider"/>

                <RelativeLayout style="@style/collect_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="外包装长"
                        android:id="@+id/out_length_tv"
                        android:textSize="50px"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>

                    <EditText
                        style="@style/collect_edit"
                        android:hint="mm"
                        android:inputType="numberDecimal"
                        android:id="@+id/out_length"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/nav_gray"
                    android:layout_marginLeft="40px"/>

                <RelativeLayout style="@style/collect_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="外包装宽"
                        android:id="@+id/out_width_tv"
                        android:textSize="50px"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>

                    <EditText
                        style="@style/collect_edit"
                        android:hint="mm"
                        android:id="@+id/out_width"
                        android:inputType="numberDecimal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/nav_gray"
                    android:layout_marginLeft="40px"/>

                <RelativeLayout style="@style/collect_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="外包装高"
                        android:id="@+id/out_height_tv"
                        android:textSize="50px"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>

                    <EditText
                        style="@style/collect_edit"
                        android:hint="mm"
                        android:id="@+id/out_height"
                        android:inputType="numberDecimal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/nav_gray"
                    android:layout_marginLeft="40px"/>

                <RelativeLayout style="@style/collect_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="毛重"
                        android:id="@+id/out_weight_tv"
                        android:textSize="50px"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>

                    <EditText
                        style="@style/collect_edit"
                        android:hint="kg"
                        android:id="@+id/out_weight"
                        android:inputType="numberDecimal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/nav_gray"
                    android:layout_marginLeft="40px"/>

                <RelativeLayout style="@style/collect_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="单个包装信息"
                        android:id="@+id/single_tv"
                        android:textSize="50px"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/single_switch"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/single_layout"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/nav_gray"
                        android:layout_marginLeft="40px"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:paddingLeft="150px"
                        android:paddingRight="50px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="单个包装长"
                            android:id="@+id/single_length_tv"
                            android:textSize="50px"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>

                        <EditText
                            style="@style/collect_edit"
                            android:hint="mm"
                            android:inputType="numberDecimal"
                            android:id="@+id/single_length"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/nav_gray"
                        android:layout_marginLeft="40px"/>

                    <RelativeLayout style="@style/collect_item">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="单个包装宽"
                            android:id="@+id/single_width_tv"
                            android:textSize="50px"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>

                        <EditText
                            style="@style/collect_edit"
                            android:hint="mm"
                            android:id="@+id/single_width"
                            android:inputType="numberDecimal"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/nav_gray"
                        android:layout_marginLeft="40px"/>

                    <RelativeLayout style="@style/collect_item">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="单个包装高"
                            android:id="@+id/single_height_tv"
                            android:textSize="50px"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>

                        <EditText
                            style="@style/collect_edit"
                            android:hint="mm"
                            android:id="@+id/single_height"
                            android:inputType="numberDecimal"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/nav_gray"
                        android:layout_marginLeft="40px"/>

                    <RelativeLayout style="@style/collect_item">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="单个包装重"
                            android:id="@+id/single_weight_tv"
                            android:textSize="50px"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>

                        <EditText
                            style="@style/collect_edit"
                            android:hint="kg"
                            android:id="@+id/single_weight"
                            android:inputType="numberDecimal"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/nav_gray"
                        android:layout_marginLeft="40px"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/divider"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件长"
                    android:id="@+id/length_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="mm"
                    android:inputType="numberDecimal"
                    android:id="@+id/length"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件宽"
                    android:id="@+id/width_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="mm"
                    android:id="@+id/width"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="零件高"
                    android:id="@+id/hight_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="mm"
                    android:id="@+id/height"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="净重"
                    android:id="@+id/weight_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="kg"
                    android:id="@+id/weight"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/divider"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="叠加长度"
                    android:id="@+id/all_length_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="mm"
                    android:id="@+id/all_length"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="叠加宽度"
                    android:id="@+id/all_width_tv"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="mm"
                    android:id="@+id/all_width"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="叠加高度"
                    android:textSize="50px"
                    android:id="@+id/all_height_tv"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <EditText
                    style="@style/collect_edit"
                    android:hint="mm"
                    android:id="@+id/all_height"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/divider"/>

            <RelativeLayout
                android:id="@+id/data_layout"
                style="@style/collect_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="数据核查"
                    android:textColor="@android:color/black"
                    android:textSize="50px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:id="@+id/check_tv"
                    android:drawableRight="@drawable/turn_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <RelativeLayout
            style="@style/collect_item"
                android:id="@+id/recommend_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="工艺推荐"
                    android:textSize="50px"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/turn_right"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/nav_gray"
                android:layout_marginLeft="40px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:id="@+id/recommend_tv"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/divider"
                android:text="备注信息"
                android:gravity="bottom"
                android:paddingLeft="50px"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:hint="请输入备注信息"
                android:id="@+id/information"
                android:maxLength="100"
                android:textColor="@color/nav_gray"
                android:textSize="50px"
                android:padding="50px"
                android:gravity="start"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/100"
                android:paddingRight="50px"
                android:gravity="end"
                android:id="@+id/info_num"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/divider"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
                android:background="@android:color/white"
                tools:listitem="@layout/select_photo_item"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加图片不超过10张，文字备注不超过100字"
                android:gravity="center"
                android:layout_marginTop="50px"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="提交"
                android:textColor="@android:color/white"
                android:id="@+id/submit"
                android:layout_margin="50px"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>


