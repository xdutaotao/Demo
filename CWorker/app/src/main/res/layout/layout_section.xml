<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="20px"
    android:id="@+id/section_view">

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_gravity="center_vertical"
        android:src="@drawable/group_arrow"
        android:id="@+id/group_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/section_padding"
        android:layout_gravity="center_vertical"
        android:textColor="@color/titlebar_bg_color"
        android:textSize="@dimen/section_text_size"
        android:id="@+id/text_section"
        android:text="111111"/>


</LinearLayout>
