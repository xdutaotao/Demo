<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/activity_background">

    <include layout="@layout/tool_bar_center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="项目标题"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/title"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="项目地区"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/address"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="项目地址"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/address_detail"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="项目类型"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/project_type"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="联系人"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/contact"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="联系电话"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/phone"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="日薪"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/fee"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="工作天数"/>
                    <TextView style="@style/item_right_text"
                        android:text="采暖系统水处理"
                        android:id="@+id/days"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="施工时间"/>
                    <TextView style="@style/item_right_text"
                        android:id="@+id/time"
                        android:text="采暖系统水处理"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目描述"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:id="@+id/describe"
                        android:text="1. 项目藐视 \n 2.项目描述"/>
                </LinearLayout>

                <View style="@style/item_divider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="50px"
                    android:layout_marginBottom="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加图纸 (不超过 10 张)"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:spanCount="4"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        tools:listitem="@layout/single_image"
                        android:id="@+id/recycler_view"/>
                </LinearLayout>


                <RelativeLayout style="@style/item_layout">
                    <TextView style="@style/item_left_text"
                        android:text="项目工费"/>
                    <TextView style="@style/item_right_text"
                        android:id="@+id/project_fee"
                        android:text="采暖系统水处理"/>
                </RelativeLayout>
                <View style="@style/item_divider" />

                <RelativeLayout style="@style/item_layout"
                    android:layout_marginBottom="40px">
                    <TextView style="@style/item_left_text"
                        android:text="平台服务费"/>
                    <TextView style="@style/item_right_text"
                        android:id="@+id/service_fee"
                        android:text="采暖系统水处理"/>
                </RelativeLayout>
                <View style="@style/item_divider"
                    android:layout_marginBottom="160px"/>

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总计："/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ 3300"
                android:id="@+id/all_price"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:text="(订单撤销退款到余额)"
                android:textColor="@color/nav_gray"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="支付并发布"
                android:id="@+id/pay"
                android:textColor="@color/white"/>
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>
