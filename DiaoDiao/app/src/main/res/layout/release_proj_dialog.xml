<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_white_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_guanbi"
        android:id="@+id/cancle_dialog"
        android:paddingLeft="50px"
        android:paddingTop="50px"/>

    <RelativeLayout style="@style/item_layout"
        android:layout_marginTop="40px">
        <TextView style="@style/item_left_text"
            android:text="数量"/>
        <EditText style="@style/edit_personal_edit"
            android:hint="请输入数量"
            android:id="@+id/amount"
            android:layout_marginRight="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/unit"
            android:text="m"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"/>

    <RelativeLayout style="@style/item_layout"
        android:layout_marginTop="40px">
        <TextView style="@style/item_left_text"
            android:text="单价"/>
        <EditText style="@style/edit_personal_edit"
            android:hint="请输入价格"
            android:id="@+id/price"
            android:layout_marginRight="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="元"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="50px"
        android:background="@color/divider"/>

    <Button
        style="@style/login_btn_style"
        android:text="确定"
        android:id="@+id/sure"
        android:layout_marginBottom="50px"/>

</LinearLayout>