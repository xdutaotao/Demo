<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_background">

    <include layout="@layout/tool_bar_center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout style="@style/project_layout"
                android:id="@+id/proj_layout"
                android:background="@color/white">

                <ImageView style="@style/project_image"
                    android:src="@drawable/icon_wodexiangmu"/>

                <LinearLayout  style="@style/project_re">

                    <View style="@style/project_circle"/>

                    <TextView
                        style="@style/project_text"
                        android:text="我的项目信息"
                        android:textSize="50px"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_apply"
                            android:background="@drawable/btn_nav_bg"
                            android:id="@+id/proj_apply"
                            android:text="申请中 0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_default"
                            android:background="@drawable/btn_little_blue_bg"
                            android:id="@+id/proj_waiting"
                            android:text="待确认 0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_orenge_bg"
                            android:textColor="@color/colorPrimary"
                            android:text="进行中 0"
                            android:id="@+id/proj_doing"
                            android:layout_marginLeft="40px"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_arrow01"/>

            </LinearLayout>

            <LinearLayout style="@style/project_layout"
                android:id="@+id/jianli_layout">

                <ImageView style="@style/project_image"
                    android:src="@drawable/icon_janlixinxi"/>

                <LinearLayout  style="@style/project_re">

                    <View style="@style/project_circle"/>

                    <TextView
                        style="@style/project_text"
                        android:text="我的监理信息"
                        android:textSize="50px"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_apply"
                            android:background="@drawable/btn_nav_bg"
                            android:id="@+id/jianli_apply"
                            android:text="申请中 0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_default"
                            android:background="@drawable/btn_little_blue_bg"
                            android:id="@+id/jianli_waiting"
                            android:text="待确认 0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_orenge_bg"
                            android:textColor="@color/colorPrimary"
                            android:text="进行中 0"
                            android:id="@+id/jianli_doing"
                            android:layout_marginLeft="40px"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_arrow01"/>

            </LinearLayout>

            <LinearLayout style="@style/project_layout"
                android:id="@+id/lg_layout">

                <ImageView style="@style/project_image"
                    android:src="@drawable/icon_fabulingong"/>

                <LinearLayout  style="@style/project_re">

                    <View
                        style="@style/project_circle"/>

                    <TextView
                        style="@style/project_text"
                        android:text="零工信息"
                        android:textSize="50px"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_default"
                            android:background="@drawable/btn_little_blue_bg"
                            android:id="@+id/lg_waiting"
                            android:text="待确认 0"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_orenge_bg"
                            android:textColor="@color/colorPrimary"
                            android:text="进行中 0"
                            android:id="@+id/lg_doing"
                            android:layout_marginLeft="10px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_apply"
                            android:background="@drawable/btn_nav_bg"
                            android:id="@+id/lg_apply"
                            android:layout_marginLeft="10px"
                            android:text="申请中 0"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_arrow01"/>

            </LinearLayout>

            <LinearLayout style="@style/project_layout"
                android:id="@+id/wb_layout">

                <ImageView style="@style/project_image"
                    android:src="@drawable/icon_fabuweibao"/>

                <LinearLayout  style="@style/project_re">

                    <View
                        style="@style/project_circle"/>

                    <TextView
                        style="@style/project_text"
                        android:text="维保信息"
                        android:textSize="50px"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accept_btn_default"
                            android:background="@drawable/btn_little_blue_bg"
                            android:id="@+id/wb_waiting"
                            android:text="待确认 0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_orenge_bg"
                            android:textColor="@color/colorPrimary"
                            android:text="进行中 0"
                            android:id="@+id/wb_doing"
                            android:layout_marginLeft="10px"/>

                        <TextView
                            android:id="@+id/wb_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/btn_nav_bg"
                            android:text="申请中 0"
                            android:textColor="@color/accept_btn_apply" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_arrow01"/>

            </LinearLayout>

            <LinearLayout style="@style/project_layout"
                android:id="@+id/hz_layout">

                <ImageView style="@style/project_image"
                    android:src="@drawable/icon_fabuhuzhu"/>

                <LinearLayout  style="@style/project_re">

                    <View
                        style="@style/project_circle"/>

                    <TextView
                        style="@style/project_text"
                        android:text="互助信息"
                        android:textSize="50px"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_little_blue_bg"
                            android:textColor="@color/accept_btn_default"
                            android:text="待确认 0"
                            android:id="@+id/hz_waiting"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_arrow01"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1220px"
                android:background="@color/activity_background"
                android:id="@+id/bg"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>