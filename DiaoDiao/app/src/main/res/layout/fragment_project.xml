<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout style="@style/project_layout">

        <ImageView style="@style/project_image"
            android:src="@drawable/icon_huzhuxinxi"
            android:id="@+id/item_image"/>

        <RelativeLayout  style="@style/project_re">

            <View
                style="@style/project_circle"
                android:id="@+id/circle"/>

            <TextView
                style="@style/project_text"
                android:text="我的项目信息"
                android:id="@+id/item_text"
                android:textSize="50px"
                android:layout_below="@+id/circle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/item_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:textColor="@color/accept_btn_default"
                    android:background="@drawable/btn_little_blue_bg"
                    android:id="@+id/waiting"
                    android:text="待确认 5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:background="@drawable/btn_orenge_bg"
                    android:textColor="@color/colorPrimary"
                    android:text="进行中 8"
                    android:id="@+id/doing"
                    android:layout_marginLeft="40px"/>
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_arrow01"/>

    </LinearLayout>


</LinearLayout>