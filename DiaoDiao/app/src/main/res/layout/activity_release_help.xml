<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/tool_bar_center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型"
        android:padding="50px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginBottom="50px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_bg"
            android:text="维修"
            android:id="@+id/repair"
            android:textColor="@color/white"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:paddingLeft="80px"
            android:paddingRight="80px"
            android:layout_marginRight="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保养"
            android:textColor="@color/nav_gray"
            android:id="@+id/maintain"
            android:background="@drawable/btn_blank_bg"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:paddingLeft="80px"
            android:paddingRight="80px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@color/divider"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout"
        app:tabSelectedTextColor="@color/accept_btn_default"
        app:tabIndicatorColor="@color/accept_btn_default"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="800px"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_tab_layout"
        app:tabSelectedTextColor="@color/accept_btn_default"
        app:tabIndicatorColor="@color/accept_btn_default"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="800px"/>


    <View style="@style/item_divider"/>

    <Button
        style="@style/login_btn_style"
        android:layout_marginTop="100px"
        android:text="下一步"
        android:id="@+id/next"/>


</LinearLayout>
