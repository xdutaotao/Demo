<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_background">

    <include layout="@layout/tool_bar_center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="审核未通过，请重新完善资料"
        android:id="@+id/edit_personal"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="#E24202"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:padding="50px"
                android:id="@+id/head_layout"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:src="@drawable/head_icon_boby"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60px"
                    android:id="@+id/head_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/turn_right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:paddingLeft="50px"
                android:layout_marginTop="40px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:id="@+id/name_text"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50px"
                    android:id="@+id/name"/>

            </RelativeLayout>

            <View style="@style/item_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:paddingLeft="50px"
                android:id="@+id/phone_layout"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:id="@+id/phone_text"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18513212904"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50px"
                    android:id="@+id/phone"/>

            </RelativeLayout>

            <View style="@style/item_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:paddingLeft="50px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海徐汇区"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50px"
                    android:id="@+id/address"/>

            </RelativeLayout>

            <View style="@style/item_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:paddingLeft="50px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中华美路60号"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50px"
                    android:id="@+id/address_detail"/>

            </RelativeLayout>

            <View style="@style/item_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/hide_layout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:paddingLeft="50px"
                    android:id="@+id/work_year_layout"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作经验"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3年"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50px"
                        android:id="@+id/work_year"/>

                </RelativeLayout>

                <View style="@style/item_divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:paddingLeft="50px"
                    android:id="@+id/work_num_layout"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队人数"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10人"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50px"
                        android:id="@+id/work_num"/>

                </RelativeLayout>

                <View style="@style/item_divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50px"
                    android:paddingTop="50px"
                    android:paddingBottom="50px"
                    android:id="@+id/project_layout"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="承接项目类型"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text=""
                        android:layout_marginRight="50px"
                        android:id="@+id/project"/>

                </RelativeLayout>

                <View style="@style/item_divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50px"
                    android:paddingTop="50px"
                    android:paddingBottom="50px"
                    android:id="@+id/work_layout"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作内容"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="自己项目自己项己项目自己项目自己项目"
                        android:layout_marginRight="50px"
                        android:id="@+id/work"/>

                </RelativeLayout>

                <View style="@style/item_divider"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>






</LinearLayout>
