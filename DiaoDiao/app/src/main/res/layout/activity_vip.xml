<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.xunao.diaodiao.Activity.VIPActivity">

    <include layout="@layout/tool_bar_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30px"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/head_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            android:layout_margin="30px"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/name"/>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/vip_no"
            android:id="@+id/level"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您的会员已过期"
        android:textColor="@android:color/holo_red_light"
        android:padding="50px"
        android:id="@+id/vip_days"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员特权"
        android:layout_margin="50px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_one"
            android:id="@+id/vip_one"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_two"
            android:id="@+id/vip_two"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_three"
            android:id="@+id/vip_three"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_four"
            android:id="@+id/vip_four"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_five"
            android:id="@+id/vip_five"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_six"
            android:id="@+id/vip_six"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_seven"
            android:id="@+id/vip_seven"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_eight"
            android:id="@+id/vip_eight"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_margin="10px"
            android:src="@drawable/vip_nine"
            android:id="@+id/vip_nine"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_margin="200px"
        android:text="马上获取特权"
        android:id="@+id/get_vip_btn"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"/>
</LinearLayout>
