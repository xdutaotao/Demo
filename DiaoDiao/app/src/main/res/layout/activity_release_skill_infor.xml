<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/tool_bar_center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="标题"/>
                <EditText style="@style/edit_personal_edit"
                    android:hint="请输入项目标题"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="联系人"/>
                <TextView style="@style/item_right_text"
                    android:text="张三"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="联系电话"/>
                <TextView style="@style/item_right_text"
                    android:text="15678909876"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="地区"/>
                <TextView style="@style/item_right_text"
                    android:text=""/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="地址"/>
                <EditText style="@style/edit_personal_edit"
                    android:hint="请输入项目地址"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="类型/品牌"/>
                <TextView style="@style/item_right_text"
                    android:text="请输入项目地址"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="上门费"/>
                <EditText style="@style/edit_personal_edit"
                    android:hint="不低于20元"
                    android:layout_marginRight="60px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <RelativeLayout style="@style/item_layout">
                <TextView style="@style/item_left_text"
                    android:text="上门时间"/>
                <EditText style="@style/edit_personal_edit"
                    android:hint="到时间自动上门"
                    android:drawablePadding="20px"
                    android:drawableRight="@drawable/icon_rili"/>
            </RelativeLayout>
            <View style="@style/item_divider" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_gray_bg"
                android:layout_margin="40px"
                android:padding="40px">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="400px"
                    android:background="@null"
                    android:hint="请填写意见反馈"
                    android:textColorHint="#D2D2D2"
                    android:gravity="top"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 / 200"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <Button
                style="@style/login_btn_style"
                android:text="下一步"
                android:id="@+id/next"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
