<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_background">

    <include layout="@layout/tool_bar_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginBottom="40px"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_nuantong"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是暖通公司"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_gray"
                android:text="发项目, 找监理"
                android:layout_marginTop="20px"/>
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingTop="100px"
            android:paddingBottom="100px"
            android:paddingLeft="50px"
            android:paddingRight="20px"
            android:drawablePadding="10px"
            android:textColor="@color/accept_btn_default"
            android:drawableRight="@drawable/checkbox_style"
            android:id="@+id/company_box"
            android:text="选择"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginBottom="40px"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_jishu"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是技术人员"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发技术人员维修"
                android:layout_marginTop="20px"
                android:textColor="@color/nav_gray"/>
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingTop="100px"
            android:paddingBottom="100px"
            android:paddingLeft="50px"
            android:paddingRight="20px"
            android:drawablePadding="10px"
            android:textColor="@color/accept_btn_default"
            android:drawableRight="@drawable/checkbox_style"
            android:id="@+id/skill_box"
            android:text="选择"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginBottom="40px"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_jiating"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是家庭用户"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="想维保, 可互动"
                android:layout_marginTop="20px"
                android:textColor="@color/nav_gray"/>
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingTop="100px"
            android:paddingBottom="100px"
            android:paddingLeft="50px"
            android:paddingRight="20px"
            android:drawablePadding="10px"
            android:textColor="@color/accept_btn_default"
            android:drawableRight="@drawable/checkbox_style"
            android:id="@+id/cumstom_box"
            android:text="选择"/>
    </LinearLayout>

</LinearLayout>
