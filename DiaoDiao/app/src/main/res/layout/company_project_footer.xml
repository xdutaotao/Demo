<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20px"
    android:paddingRight="50px"
    android:background="@color/activity_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View android:layout_width="2px"
            android:layout_height="80px"
            android:id="@+id/head_line"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_jingdu"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingBottom="20px"
            android:id="@+id/time"
            android:textColor="@color/accept_btn_default"
            android:text="待我确认，确认通过将工费汇给施工方"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18：00：00 自动通过"
            android:textColor="@color/nav_gray"
            android:id="@+id/content"
            android:paddingLeft="20px"/>

    </LinearLayout>

</LinearLayout>