<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity.CheckPhoneActivity"
    android:background="@android:color/white">

    <include layout="@layout/tool_bar_center_white"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginLeft="20px"
        android:digits="1234567890"
        android:drawableLeft="@drawable/icon_phone"
        android:drawablePadding="40px"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:textSize="@dimen/edit_text_size" />

    <View style="@style/setting_divider_line_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="20px">

        <EditText
            android:layout_width="0px"
            android:layout_height="180px"
            android:layout_weight="4"
            android:id="@+id/code_input"
            android:hint="请输入短信验证码"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="4"
            android:textSize="@dimen/edit_text_size"
            android:drawableLeft="@drawable/icon_code"
            android:drawablePadding="40px"
            android:layout_marginLeft="20px"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:id="@+id/get_code"
            android:text="获取验证码"
            android:textSize="35px"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/btn_code"/>
        </LinearLayout>

    <View style="@style/setting_divider_line_style"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:id="@+id/pwd_input"
        android:hint="请输入手机号"
        android:digits="1234567890"
        android:maxLength="11"
        android:textSize="@dimen/edit_text_size"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="40px"
        android:layout_marginLeft="20px"/>

    <View style="@style/setting_divider_line_style"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:id="@+id/pwd_sure_input"
        android:hint="请输入手机号"
        android:digits="1234567890"
        android:maxLength="11"
        android:textSize="@dimen/edit_text_size"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="40px"
        android:layout_marginLeft="20px"/>

    <Button
        android:id="@+id/register_btn"
        android:text="修改"
        style="@style/login_btn_style"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账户,"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>



</LinearLayout>



