<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <include layout="@layout/home_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/scrollView">

            <com.gzfgeh.viewpagecycle.ImageCycleView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:id="@+id/image_cycle_view"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_proj"
                android:background="@color/white"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner02"
                android:id="@+id/banner"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:gravity="center_vertical"
                android:padding="20px"
                android:layout_marginTop="10px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/dindan_fill"
                    android:gravity="center"
                    android:drawablePadding="10px"
                    android:text="项目推荐"
                    android:layout_marginLeft="20px"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="更多"
                    android:drawableRight="@drawable/turn_right"
                    android:layout_alignParentRight="true"
                    android:id="@+id/more_one"/>
            </RelativeLayout>

            <View
                android:layout_height="2px"
                android:layout_marginLeft="50px"
                android:layout_width="match_parent"
                android:background="@drawable/divider_line"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:gravity="center_vertical"
                android:padding="20px"
                android:layout_marginTop="10px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零工推荐"
                    android:gravity="center"
                    android:drawablePadding="10px"
                    android:layout_marginLeft="20px"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_lingong"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/turn_right"
                    android:id="@+id/more_two"/>
            </RelativeLayout>

            <View
                android:layout_height="2px"
                android:layout_marginLeft="50px"
                android:layout_width="match_parent"
                android:background="@drawable/divider_line"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_classic"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:gravity="center_vertical"
                android:padding="20px"
                android:layout_marginTop="10px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维保推荐"
                    android:gravity="center"
                    android:drawablePadding="10px"
                    android:layout_marginLeft="20px"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_weibao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/turn_right"
                    android:id="@+id/more_three"/>
            </RelativeLayout>

            <View
                android:layout_height="2px"
                android:layout_marginLeft="50px"
                android:layout_width="match_parent"
                android:background="@drawable/divider_line"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_list"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
